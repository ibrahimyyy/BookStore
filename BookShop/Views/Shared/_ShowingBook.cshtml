@using BookShop.Models;
@model BookModel
<div class=" card mb-4 shadow-sm">
    <img class="card-img-top img-thumbnail" src="@(string.IsNullOrEmpty(Model.ImageURL)? "~/Images/depositphotos_247872612-stock-illustration-no-image-available-icon-vector.jpg" : Model.ImageURL )" width="100" height="200" />
    <div class="card-body">
        <h5 class="card-title">@(string.IsNullOrEmpty(Model.Title)?"there is no Title" : Model.Title)</h5>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description)?"there is no Description" : Model.Description)</p>
        <a asp-controller="BookC" asp-action="GetBookId" asp-route-id="@Model.Id" class="btn btn-primary"> Show </a> @*it's like herf="/BookC/GetBookId/b.Id"   and here i can pass many parameter by using asp-route-data_name="" *@
    <small class="text-muted float-right">Author:@(string.IsNullOrEmpty(Model.Author)?"there is no Author" : Model.Author) </small>
    </div>
</div>