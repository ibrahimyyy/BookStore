@model BookShop.Models.EmailConfirmModel
@{
    ViewData["Title"] = "ConfirmEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" container">
    <h1>Confirm Email</h1>
    <div class="row text-center">
        <div class="col-md4">
            @if(Model.IsConfirmed == true)
            {
                <div class="text-success" role="alert">
                    <p>Your email has been already verifed successfully </p>
                </div>            
            }
            else if(Model.EmailVerified == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>Your email has been verifed successfully.</p>
                </div>
            }
            else
            {
                if(Model.EmailSent == true)
                {
                    <p>Email verify sent to your email.</p>
                }
                else
                {
                    <p>we have send an email on your email id. Click the link to login.</p>
                }
                    <form asp-action="ConfirmEmail">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Email" />

                        <p>didn't get verify email or deleted by mistak?</p>
                        <div class=" form-group">
                            <input type="submit" value="Resend verify email" class="byn btn alert-dark" />
                        </div>
                    </form>                
            }
             
        </div>
    </div>
</div>

