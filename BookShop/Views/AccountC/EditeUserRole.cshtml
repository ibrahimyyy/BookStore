@model BookShop.Models.RoleinfoModel

@{
    ViewData["Title"] = "EditeUserRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edite user role</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditeUserRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            
            <div class="form-group">                
                <input type="hidden" asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <input type="hidden" asp-for="OldRoleName" class="form-control" />
                <span asp-validation-for="OldRoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edite" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>